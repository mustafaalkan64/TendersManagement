@page
@model DeleteModel
@{
    ViewData["Title"] = "Danýþmanlýk Þirketi Sil";
}

<h1>Danýþmanlýk Þirketi Sil</h1>

<div class="alert alert-danger">
    <h3>Silmek Ýstediðinizden Emin misiniz?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Company.Name)</dt>
        <dd class="col-sm-10">@Model.Company.Name</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Company.CreatedDate)</dt>
        <dd class="col-sm-10">@Model.Company.CreatedDate.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Company.Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-page="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div> 