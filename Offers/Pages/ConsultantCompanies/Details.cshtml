@page
@model DetailsModel
@{
    ViewData["Title"] = "Danýþmanlýk Firma Detayý";
}

<div class="container-fluid">
    <h1 class="mt-4">Danýþmanlýk Firma Detayý</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-building me-1"></i>
            Firma Bilgileri
        </div>
        <div class="card-body">
            <div cite="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Company.TicariUnvan)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Company.TicariUnvan)</dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company.Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.VergiNo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company.VergiNo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.VergiDairesiAdi)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company.VergiDairesiAdi)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.TicariSicilNo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company.TicariSicilNo)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.Telefon)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company.Telefon)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.Faks)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company.Faks)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company.Eposta)</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.Company.Eposta">@Model.Company.Eposta</a>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <dl class="row">
                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Company.Address)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Company.Address)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <a asp-page="./Edit" asp-route-id="@Model.Company.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Düzenle
        </a>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>