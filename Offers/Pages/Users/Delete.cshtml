@page
@model DeleteModel
@{
    ViewData["Title"] = "Kullanýcý Sil";
}

<h1>Kullanýcý Sil</h1>

<div class="alert alert-danger">
    <h3>Kullanýcýyý Silmek Ýstediðinizden Emin misiniz?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
