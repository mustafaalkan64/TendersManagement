@page
@model EditModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserEdit.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="UserEdit.Email" class="control-label"></label>
                <input asp-for="UserEdit.Email" class="form-control" />
                <span asp-validation-for="UserEdit.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Roles</label>
                @foreach (var role in Model.AvailableRoles)
                {
                    <div class="form-check">
                        <input type="checkbox" 
                               name="SelectedRoles" 
                               value="@role" 
                               @(Model.UserRoles.Contains(role) ? "checked" : "") 
                               class="form-check-input" />
                        <label class="form-check-label">@role</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-page="./Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 